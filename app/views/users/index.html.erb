<h2>Popular Users</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Reviews</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.reviews.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Restaurants near  you</h2>
<table class="table table-striped">
 <thead>
   <tr>
     <th>#</th>
     <th>Name</th>
     <th>Address</th>
   </tr>
 </thead>
 <tbody>
  <% @businesses.each do |business| %>
    <tr>
      <td><%= business.id %></td>
      <td><%= business.name %></td>
      <td><%= business.full_address %></td>
    </tr>
  <% end %>
 </tbody> 
</table>
